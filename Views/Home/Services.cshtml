@{
    ViewData["Title"] = "Our Services - Glamour Beauty";
}
<!-- Services Header -->
<section class="hero-section" style="padding: 100px 0; background: linear-gradient(135deg, rgba(255,105,180,0.9), rgba(255,20,147,0.9)), url('https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');">
    <div class="container">
        <h1 class="hero-title">Our Premium Services</h1>
        <p class="hero-subtitle">Discover our range of beauty services designed to enhance your natural beauty</p>
    </div>
</section>
<!-- All Services -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Service 1 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-crown"></i>
                    </div>
                    <h4>Bridal Makeup</h4>
                    <p>Complete bridal packages with trial sessions, professional makeup artists, and lasting results for your special day.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹5,000 - ₹25,000</span>
                        <br>
                        <small class="text-muted">Duration: 2-4 hours</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
            <!-- Service 2 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-birthday-cake"></i>
                    </div>
                    <h4>Party Makeup</h4>
                    <p>Perfect makeup for parties, events, and special occasions. Get camera-ready with our expert artists.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹2,000 - ₹5,000</span>
                        <br>
                        <small class="text-muted">Duration: 1-2 hours</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
            <!-- Service 3 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-spa"></i>
                    </div>
                    <h4>Facial Treatments</h4>
                    <p>Rejuvenating facials for glowing skin. Choose from gold, diamond, organic, and anti-aging facials.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹1,500 - ₹5,000</span>
                        <br>
                        <small class="text-muted">Duration: 1-1.5 hours</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
            <!-- Service 4 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-cut"></i>
                    </div>
                    <h4>Hair Styling</h4>
                    <p>Professional hair cutting, styling, coloring, and treatments by expert hairstylists with latest techniques.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹500 - ₹3,000</span>
                        <br>
                        <small class="text-muted">Duration: 1-3 hours</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
            <!-- Service 5 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-hand-sparkles"></i>
                    </div>
                    <h4>Manicure & Pedicure</h4>
                    <p>Luxurious hand and foot care services including nail art, spa treatments, and professional grooming.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹800 - ₹2,500</span>
                        <br>
                        <small class="text-muted">Duration: 1-2 hours</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
            <!-- Service 6 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h4>Threading & Waxing</h4>
                    <p>Precision threading and comfortable waxing services for flawless eyebrows and smooth skin.</p>
                    <div class="mt-3">
                        <span class="h5 text-primary">₹200 - ₹1,500</span>
                        <br>
                        <small class="text-muted">Duration: 30-45 mins</small>
                    </div>
                    <a href="/Home/Appointment" class="btn btn-glamour mt-3">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Call to Action -->
<section class="py-5" style="background-color: var(--light-pink);">
    <div class="container text-center">
        <h2 class="section-title">Ready to Experience Premium Beauty Care?</h2>
        <p class="lead mb-4">Book your appointment today and let our experts bring out your natural beauty</p>
        <a href="/Home/Appointment" class="btn btn-glamour btn-lg">
            <i class="fas fa-calendar-check me-2"></i>Book Appointment Now
        </a>
    </div>
</section>
