@{
    ViewData["Title"] = "Contact Us - Glamour Beauty";
}
<!-- Contact Header -->
<section class="hero-section" style="padding: 100px 0; background: linear-gradient(135deg, rgba(255,105,180,0.9), rgba(255,20,147,0.9)), url('https://images.unsplash.com/photo-1560448204-603b3fc33ddc?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');">
    <div class="container">
        <h1 class="hero-title">Contact Us</h1>
        <p class="hero-subtitle">Get in touch with our beauty experts</p>
    </div>
</section>
<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Contact Info -->
            <div class="col-lg-4">
                <div class="service-card h-100">
                    <h3 class="mb-4">Visit Our Salon</h3>
                    <div class="d-flex align-items-start mb-3">
                        <i class="fas fa-map-marker-alt text-primary me-3 mt-1"></i>
                        <div>
                            <h6>Address</h6>
                            <p>123 Beauty Street<br>Model Town<br>Your City - 123456</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <i class="fas fa-phone text-primary me-3 mt-1"></i>
                        <div>
                            <h6>Phone</h6>
                            <p>+91 98765 43210<br>+91 98764 53210</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <i class="fas fa-envelope text-primary me-3 mt-1"></i>
                        <div>
                            <h6>Email</h6>
                            <p>info@glamourbeauty.com<br>appointments@glamourbeauty.com</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <i class="fas fa-clock text-primary me-3 mt-1"></i>
                        <div>
                            <h6>Working Hours</h6>
                            <p>Monday - Saturday: 9:00 AM - 8:00 PM<br>Sunday: 10:00 AM - 6:00 PM</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Contact Form -->
            <div class="col-lg-8">
                <div class="service-card">
                    <h3 class="mb-4">Send us a Message</h3>
                    <form id="contactForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="contactName" class="form-label">Your Name *</label>
                                <input type="text" class="form-control" id="contactName" required>
                            </div>
                            <div class="col-md-6">
                                <label for="contactEmail" class="form-label">Your Email *</label>
                                <input type="email" class="form-control" id="contactEmail" required>
                            </div>
                            <div class="col-12">
                                <label for="contactSubject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="contactSubject">
                            </div>
                            <div class="col-12">
                                <label for="contactMessage" class="form-label">Message *</label>
                                <textarea class="form-control" id="contactMessage" rows="5" required></textarea>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-glamour">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Map Section -->
<section class="py-5" style="background-color: var(--light-pink);">
    <div class="container">
        <h2 class="section-title">Find Us</h2>
        <div class="service-card">
            <div class="text-center p-4">
                <i class="fas fa-map-marked-alt fa-3x text-primary mb-3"></i>
                <h4>Our Location</h4>
                <p class="mb-4">We're located in the heart of the city, easily accessible from all areas.</p>
                <div style="background: #f8f9fa; padding: 2rem; border-radius: 10px;">
                    <p class="h5">üìç 123 Beauty Street, Model Town, Your City - 123456</p>
                    <p class="text-muted mt-2">Landmark: Near City Mall, Opposite Central Park</p>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        alert('Thank you for your message! We will get back to you within 24 hours.');
        this.reset();
    });
</script>
