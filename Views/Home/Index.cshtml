<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="hero-title">Discover Your Beauty</h1>
                <p class="hero-subtitle">Experience premium beauty services that bring out the best in you</p>
                <a href="/Home/Appointment" class="btn btn-glamour me-3">
                    <i class="fas fa-calendar-check me-2"></i>Book Appointment
