@{
    ViewData["Title"] = "About Us - Glamour Beauty";
}
<!-- About Header -->
<section class="hero-section" style="padding: 100px 0; background: linear-gradient(135deg, rgba(255,105,180,0.9), rgba(255,20,147,0.9)), url('https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');">
    <div class="container">
        <h1 class="hero-title">About Glamour Beauty</h1>
        <p class="hero-subtitle">Your trusted partner in beauty and wellness since 2015</p>
    </div>
</section>
<!-- Our Story -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="section-title text-start">Our Story</h2>
                <p class="lead">Founded in 2015, Glamour Beauty has been at the forefront of beauty and wellness services in our community.</p>
                <p>We started with a simple mission: to provide premium beauty services that are accessible, affordable, and delivered with the highest standards of quality and hygiene.</p>
                <p>Over the years, we've grown from a small salon to a premier beauty destination, thanks to the trust and love of our valued customers.</p>
            </div>
            <div class="col-lg-6">
                <div class="service-card">
                    <img src="https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                         alt="Our Salon" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Our Values -->
<section class="py-5" style="background-color: var(--light-pink);">
    <div class="container">
        <h2 class="section-title">Why Choose Us?</h2>
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <i class="fas fa-gem fa-3x text-primary mb-3"></i>
                <h5>Premium Quality</h5>
                <p>We use only the best products and latest techniques to ensure you get exceptional results every time.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                <h5>Expert Team</h5>
                <p>Our certified professionals are trained in the latest beauty trends and techniques from around the world.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-heart fa-3x text-primary mb-3"></i>
                <h5>Customer First</h5>
                <p>Your satisfaction is our priority. We listen to your needs and customize services accordingly.</p>
            </div>
        </div>
    </div>
</section>
